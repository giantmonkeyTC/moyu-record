<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_channel_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_member_drawer_light">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_members_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_member_drawer_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_members"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="频道成员"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/guild_channel_divider"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/background1HalfAlpha"
        app:layout_constraintTop_toBottomOf="@id/layout_members_header"
        app:layout_constraintBottom_toTopOf="@id/view_members"
        />


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/view_members"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_members_header" />

</androidx.constraintlayout.widget.ConstraintLayout>