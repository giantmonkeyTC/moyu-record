<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frameworkSelector">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_guild_channels"
        android:name="cn.troph.tomon.ui.chat.fragments.GuildChannelSelectorFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="80dp"
        android:background="@color/frameworkSelector"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_guilds"
        android:name="cn.troph.tomon.ui.chat.fragments.GuildSelectorFragment"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/frameworkSelectorDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>