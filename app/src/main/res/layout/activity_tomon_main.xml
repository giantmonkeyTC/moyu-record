<?xml version="1.0" encoding="utf-8"?>
<cn.troph.tomon.ui.widgets.TomonDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/channel_list_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.TomonMainActivity">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_list_tab_height"
            android:layout_weight="0"
            android:background="@color/channel_list_tab_bg"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <cn.troph.tomon.ui.widgets.TomonTabButton
                android:id="@+id/tab_channel_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:icon_background="@drawable/selector_channel_tab_item"
                app:name_text="@string/channel_tab_text" />

            <cn.troph.tomon.ui.widgets.TomonTabButton
                android:id="@+id/tab_dm_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:icon_background="@drawable/selector_dm_tab_item"
                app:name_text="@string/dm_tab_text" />

            <RelativeLayout
                android:id="@+id/rl_tab_me"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <cn.troph.tomon.ui.widgets.UserAvatar
                    android:id="@+id/iv_avatar"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/tab_me_width"
                    android:layout_height="@dimen/tab_me_height"/>

                <ImageView
                    android:id="@+id/iv_ring"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/tab_me_width"
                    android:layout_height="@dimen/tab_me_width"
                    android:visibility="invisible"
                    android:background="@drawable/ping_ring" />

                <RelativeLayout
                    android:id="@+id/rl_my_status"
                    android:visibility="invisible"
                    android:layout_alignEnd="@id/iv_avatar"
                    android:layout_alignBottom="@id/iv_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_status_dot_stroke"
                        android:layout_width="@dimen/tab_me_status_dot_stroke_width"
                        android:layout_height="@dimen/tab_me_status_dot_stroke_height"
                        android:background="@drawable/shape_unread_dot_stroke" />

                    <ImageView
                        android:id="@+id/iv_status_dot_content"
                        android:layout_width="@dimen/tab_me_status_dot_content_width"
                        android:layout_height="@dimen/tab_me_status_dot_content_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_status_online_dot_content"
                         />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_guild_list"/>

</cn.troph.tomon.ui.widgets.TomonDrawerLayout>