<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background4"
    android:layout_height="600dp"
    android:windowSoftInputMode="adjustResize|stateHidden"
    tools:context=".ui.chat.fragments.BotCommandBottomSheet">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bot_command_rr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/search_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        app:queryHint="@string/seach_bot_hint"
        app:defaultQueryHint="@string/seach_bot_hint"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:iconifiedByDefault="false"
        android:layout_height="wrap_content"
        app:submitBackground="@color/background4"
        android:background="@color/background4"
        app:queryBackground="@color/background4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>