<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">


    <cn.troph.tomon.ui.widgets.UserAvatar
        android:id="@+id/message_avatar_invite"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/widget_message_author_name_text_invite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/widget_message_author_name_text_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/widget_message_timestamp_text_invite"
        app:layout_constraintStart_toEndOf="@+id/message_avatar_invite"
        app:layout_constraintTop_toTopOf="@id/message_avatar_invite" />

    <TextView
        android:id="@+id/widget_message_timestamp_text_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/channelCategoryText"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/widget_message_author_name_text_invite"
        app:layout_constraintTop_toTopOf="@id/message_avatar_invite" />

    <TextView
        android:id="@+id/link_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#DDFFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/widget_message_timestamp_text_invite"
        android:textColorLink="@android:color/holo_blue_dark"
       />

    <ImageView
        android:id="@+id/join_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:src="@drawable/join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/link_tv"
        app:layout_constraintTop_toBottomOf="@id/link_tv" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_avatar_invite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avatar_placeholder"
        app:layout_constraintBottom_toBottomOf="@id/join_image"
        app:layout_constraintStart_toStartOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image"
        app:riv_corner_radius="3dp" />

    <TextView
        android:id="@+id/invite_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="邀请您加入"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/user_avatar_invite"
        app:layout_constraintTop_toTopOf="@id/user_avatar_invite" />

    <TextView
        android:id="@+id/invite_guild_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="邀请您加入"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/user_avatar_invite"
        app:layout_constraintTop_toBottomOf="@id/invite_msg" />

    <ImageView
        android:id="@+id/joined_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingBottom="4dp"
        android:src="@drawable/ic_joined"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/join_image"
        app:layout_constraintEnd_toEndOf="@id/join_image"
        app:layout_constraintStart_toStartOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image" />


        <include
            layout="@layout/item_reaction_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/join_image"
            app:layout_constraintTop_toBottomOf="@id/join_image" />


</androidx.constraintlayout.widget.ConstraintLayout>