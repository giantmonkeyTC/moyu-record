<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/invite_guild_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.troph.tomon.ui.widgets.GuildAvatar
        android:id="@+id/invite_confirm_guild_avatar"
        android:layout_width="@dimen/invite_avatar"
        android:layout_height="@dimen/invite_avatar"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/invite_guild_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/invite_confirm_guild_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_guild_name" />

    <Button
        android:id="@+id/invite_confirm_button"
        android:layout_width="@dimen/invite_confirm_button_width"
        android:layout_height="@dimen/invite_confirm_buttom_height"
        android:layout_marginTop="@dimen/invite_confirm_button_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_confirm_guild_member" />

</androidx.constraintlayout.widget.ConstraintLayout>