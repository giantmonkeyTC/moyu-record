<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/layout_input"
        app:layout_constraintTop_toTopOf="@id/coordinatorLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_text_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/swipe_refresh_ll"
        app:layout_constraintEnd_toEndOf="@id/swipe_refresh_ll"
        app:layout_constraintStart_toStartOf="@id/swipe_refresh_ll"
        app:layout_constraintTop_toTopOf="@id/swipe_refresh_ll"
        app:lottie_fileName="7972-loading.json"
        app:lottie_loop="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/inputPanelBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/bar_update_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/guildBackground"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="20dp"
                android:layout_weight="7"
                android:text="@string/updateMessage"
                android:textColor="@color/frameworkSelector" />

            <TextView
                android:id="@+id/btn_update_message_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textAlignment="viewEnd"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_pannel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/bar_update_message">

            <ImageView
                android:id="@+id/btn_message_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/ic_guild_fab_pattern"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/emoji_tv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/emoji_button_ic"
                app:layout_constraintStart_toEndOf="@id/btn_message_menu"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.emoji.widget.EmojiEditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="20dp"
                android:background="@null"
                android:hint="@string/emoji_et_hint"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_message_send"
                app:layout_constraintStart_toEndOf="@id/emoji_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_message_send"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/ic_channel_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.cruxlab.sectionedrecyclerview.lib.SectionHeaderLayout
            android:id="@+id/section_header_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/edit_pannel_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emoji_rr"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.cruxlab.sectionedrecyclerview.lib.SectionHeaderLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/primaryDark"
            app:layout_constraintTop_toBottomOf="@id/section_header_layout" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_emoji_rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>