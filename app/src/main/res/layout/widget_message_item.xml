<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.troph.tomon.ui.widgets.UserAvatar
            android:id="@+id/message_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/widget_message_author_name_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/widget_message_timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/channelCategoryText" />


    </LinearLayout>

    <ImageView
        android:id="@+id/widget_message_attachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/widget_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/widget_reactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="20dp"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="flex_start">

    </com.google.android.flexbox.FlexboxLayout>


    <include
        layout="@layout/item_reaction_view"
        android:layout_marginStart="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/chat_iv"
        app:layout_constraintStart_toStartOf="@id/chat_iv"
        app:layout_constraintTop_toBottomOf="@id/chat_iv" />

</LinearLayout>