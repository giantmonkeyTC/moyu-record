<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/country_code_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/whiteAlpha50"
        android:hint="手机号"
        android:paddingStart="80dp"
        android:paddingBottom="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/whiteAlpha50"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint_background" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/countryPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingBottom="10dp"
        app:ccp_autoDetectCountry="true"
        app:ccp_contentColor="@color/white"
        app:ccp_showFlag="false"
        app:ccp_defaultLanguage="CHINESE_SIMPLIFIED"
        app:ccp_showNameCode="false"
        app:ccp_textSize="14dp"
        app:ccpDialog_backgroundColor="@color/background3"
        app:ccpDialog_textColor="@color/whiteAlpha50"
        app:layout_constraintBottom_toBottomOf="@id/country_code_edittext"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@id/country_code_edittext" />

    <View
        android:layout_width="1dp"
        android:layout_height="23dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="10dp"
        android:background="@color/whiteAlpha50"
        app:layout_constraintBottom_toBottomOf="@id/country_code_edittext"
        app:layout_constraintStart_toStartOf="@id/country_code_edittext"
        app:layout_constraintTop_toTopOf="@id/country_code_edittext" />
</androidx.constraintlayout.widget.ConstraintLayout>