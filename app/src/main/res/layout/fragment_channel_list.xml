<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blackPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_guild_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guild_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_guild_banner_mask"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guild_image_height"
        android:background="@drawable/guild_background_mask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_guild_avatar"
        android:layout_width="@dimen/guild_avatar_width"
        android:layout_height="@dimen/guild_avatar_height"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_guild_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_guild_banner"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_guild_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/channel_list_guild_name_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_guild_avatar"
        app:layout_constraintEnd_toStartOf="@+id/iv_guild_setting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_guild_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_guild_avatar"
        tools:text="Troph 救援团救援团救援团救援团救援团" />

    <ImageView
        android:id="@+id/iv_guild_setting"
        android:layout_width="@dimen/guild_setting_width"
        android:layout_height="@dimen/guild_setting_height"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:background="@drawable/guild_setting"
        app:layout_constraintBottom_toBottomOf="@+id/iv_guild_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_guild_avatar" />

    <TextView
        android:id="@+id/tv_no_icon_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/text_color_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_guild_avatar"
        app:layout_constraintEnd_toEndOf="@+id/iv_guild_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_guild_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_guild_avatar"
        tools:text="T"
        android:textSize="18dp"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_channel_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_guild_banner" />



</androidx.constraintlayout.widget.ConstraintLayout>