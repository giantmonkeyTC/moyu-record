<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reply_source_transition"
    android:paddingBottom="@dimen/message_item_padding_bottom"
    android:layout_marginTop="@dimen/message_item_avatar_margin_top"
    android:paddingTop="@dimen/message_item_padding_top"
    android:layout_marginBottom="@dimen/message_item_margin_bottom"
    android:layout_marginStart="@dimen/message_item_margin_start"
    android:layout_marginEnd="@dimen/message_item_margin_end"
    android:paddingEnd="@dimen/message_item_padding_end">


    <cn.troph.tomon.ui.widgets.UserAvatar
        android:id="@+id/message_avatar_invite"
        android:layout_width="@dimen/message_item_avatar_width"
        android:layout_height="@dimen/message_item_avatar_height"
        android:layout_marginStart="@dimen/message_item_avatar_margin_start"
        app:layout_constraintEnd_toStartOf="@+id/widget_message_author_name_text_invite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/widget_message_author_name_text_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/body_size"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginStart="@dimen/message_item_author_name_margin_start"
        android:ellipsize="end"
        android:maxWidth="150dp"
        app:layout_constraintEnd_toStartOf="@+id/widget_message_timestamp_text_invite"
        app:layout_constraintStart_toEndOf="@+id/message_avatar_invite"
        app:layout_constraintTop_toTopOf="@id/message_avatar_invite" />

    <TextView
        android:id="@+id/widget_message_timestamp_text_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/message_item_timestamp_margin_start"
        android:textColor="@color/channelCategoryText"
        android:textSize="@dimen/caption_size"
        app:layout_constraintStart_toEndOf="@+id/widget_message_author_name_text_invite"
        app:layout_constraintBottom_toBottomOf="@id/widget_message_author_name_text_invite"  />

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/link_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/message_content_margin_start"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/message_item_content_margin_top"
        app:layout_goneMarginTop="0dp"
        android:textColor="#DDFFFFFF"
        android:textSize="@dimen/body_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/widget_message_timestamp_text_invite"
        android:textColorLink="@android:color/holo_blue_dark"
       />

    <View
        android:id="@+id/divider"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image"
        app:layout_constraintBottom_toBottomOf="@id/join_image"

        />
    <ImageView
        android:id="@+id/join_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/message_item_content_margin_top"
        android:paddingBottom="4dp"
        android:src="@drawable/join_guild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/link_tv"
        app:layout_constraintTop_toBottomOf="@id/link_tv" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_avatar_invite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_guild_placeholder"
        app:layout_constraintBottom_toBottomOf="@id/join_image"
        app:layout_constraintStart_toStartOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image"
        app:riv_corner_radius="45dp" />
    <TextView
        android:id="@+id/default_avatar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/primaryText"
        app:layout_constraintTop_toTopOf="@id/user_avatar_invite"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar_invite"
        app:layout_constraintStart_toStartOf="@id/user_avatar_invite"
        app:layout_constraintEnd_toEndOf="@id/user_avatar_invite"
        />

    <TextView
        android:id="@+id/invite_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="邀请您加入"
        android:translationY="-4dp"
        android:textColor="@color/secondaryText"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/user_avatar_invite"
        app:layout_constraintTop_toTopOf="@id/user_avatar_invite" />

    <TextView
        android:id="@+id/invite_guild_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="邀请您加入"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/primaryDarker"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/user_avatar_invite"
        app:layout_constraintTop_toBottomOf="@id/invite_msg" />



    <ImageView
        android:id="@+id/joined_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingBottom="4dp"
        android:src="@drawable/shadow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/join_image"
        app:layout_constraintEnd_toEndOf="@id/join_image"
        app:layout_constraintStart_toStartOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image" />


        <include
            layout="@layout/item_reaction_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/join_image"
            app:layout_constraintTop_toBottomOf="@id/join_image" />


</androidx.constraintlayout.widget.ConstraintLayout>