<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    tools:context=".ui.activities.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/register_n_login"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:background="#202020"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/register_n_login"
            android:transitionName="register_n_login"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_n_login">

            <EditText
                android:id="@+id/register_input_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:hint="@string/register_user_name"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/whiteAlpha70"
                android:theme="@style/AppTheme.EditText"
                app:layout_constraintBottom_toTopOf="@id/register_input_union_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/register_input_union_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="@string/login_id_hint"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/whiteAlpha70"
                android:theme="@style/AppTheme.EditText"
                android:inputType="phone"
                app:layout_constraintBottom_toTopOf="@id/register_confirmation_code"
                app:layout_constraintEnd_toStartOf="@id/button_confirmation"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/primary"
                android:text="@string/register_confirmation"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/register_input_union_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/register_input_union_id" />

            <EditText
                android:id="@+id/register_confirmation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:maxLines="1"
                android:hint="@string/register_confirmation_code"
                android:textColor="@color/white"
                android:inputType="number"
                android:textColorHint="@color/whiteAlpha70"
                android:theme="@style/AppTheme.EditText"
                app:layout_constraintBottom_toTopOf="@+id/register_input_invite_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/register_input_invite_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:maxLines="1"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="@string/register_invite_code"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/whiteAlpha70"
                android:theme="@style/AppTheme.EditText"
                app:layout_constraintBottom_toTopOf="@+id/button_register"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/primary"
                android:text="@string/register_button"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/private_agreement_tv"
            android:textColorLink="@android:color/holo_blue_light"
            android:text="@string/privacy_agreement"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>