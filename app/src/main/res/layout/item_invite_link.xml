<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/link_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/join_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link_tv" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_avatar_invite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="3dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/emoji_button_ic"
        app:layout_constraintBottom_toBottomOf="@id/join_image"
        app:layout_constraintStart_toStartOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image" />

    <TextView
        android:id="@+id/invite_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="邀请您加入"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/user_avatar_invite"
        app:layout_constraintTop_toTopOf="@id/user_avatar_invite" />

    <TextView
        android:id="@+id/invite_guild_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="邀请您加入"
        app:layout_constraintStart_toEndOf="@id/user_avatar_invite"
        app:layout_constraintTop_toBottomOf="@id/invite_msg" />

    <ImageView
        android:id="@+id/joined_cover"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_joined"
        app:layout_constraintBottom_toBottomOf="@id/join_image"
        app:layout_constraintEnd_toEndOf="@id/join_image"
        app:layout_constraintStart_toStartOf="@id/join_image"
        app:layout_constraintTop_toTopOf="@id/join_image"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/join_image"
        android:id="@+id/reaction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/item_reaction_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>