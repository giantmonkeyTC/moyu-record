<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frameworkSelectorDark">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_guild_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="15dp"
        android:background="#ff4d9d4e"
        android:clickable="true"
        android:elevation="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_guild_fab_pattern"
        app:fabCustomSize="44dp" />

    <cn.troph.tomon.ui.widgets.UserAvatar
        android:id="@+id/view_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_guilds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>