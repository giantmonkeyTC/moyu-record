<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_19dp">

    <ImageView
        android:id="@+id/iv_selected_flag"
        android:layout_width="@dimen/guild_list_selected_flag_width"
        android:layout_height="@dimen/guild_list_selected_flag_height"
        android:background="@drawable/shape_guild_list_selected_flag"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/guild_list_avatar_width"
        android:layout_height="@dimen/guild_list_avatar_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_selected_flag"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_unread_dot_stroke"
        android:layout_width="@dimen/unread_dot_stroke_width"
        android:layout_height="@dimen/unread_dot_stroke_height"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/shape_unread_dot_stroke"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <ImageView
        android:id="@+id/iv_unread_dot_content"
        android:layout_width="@dimen/unread_dot_content_width"
        android:layout_height="@dimen/unread_dot_content_height"
        android:background="@drawable/shape_unread_dot_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_unread_dot_stroke"
        app:layout_constraintEnd_toEndOf="@+id/iv_unread_dot_stroke"
        app:layout_constraintStart_toStartOf="@+id/iv_unread_dot_stroke"
        app:layout_constraintTop_toTopOf="@+id/iv_unread_dot_stroke" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/unread_dot_stroke_width"
        android:layout_height="@dimen/unread_dot_stroke_height"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/tv_guild_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Troph 救援团救援团救援团救援团救援团救援团救援团"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/guild_name_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/tv_no_icon_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        tool:text="T"
        tool:visibility="visible"
        android:textColor="@color/text_color_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>